{
  "name": "nft-ft",
  "version": "1.0.0",
  "description": "DeedNFT Smart Contract Testing",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:anvil": "hardhat test --network anvil",
    "test:ganache": "hardhat test --network ganache",
    "test:gas": "REPORT_GAS=true hardhat test",
    "coverage": "hardhat coverage",
    "deploy:anvil": "hardhat run scripts/deploy.js --network anvil",
    "deploy:ganache": "hardhat run scripts/deploy.js --network ganache",
    "deploy:localhost": "hardhat run scripts/deploy.js --network localhost",
    "test:property": "hardhat test test/PropertyNFT.test.js --network anvil",
    "test:fraction": "hardhat test test/FractionTokenFactory.test.js --network anvil",
    "test:escrow": "hardhat test test/Escrow.test.js --network anvil",
    "test:stamp": "hardhat test test/StampFeeCollector.test.js --network anvil",
    "test:will": "hardhat test test/LastWillRegistry.test.js --network anvil",
    "test:integration": "hardhat test test/Integration.test.js --network anvil"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^10.0.10",
    "chai": "^4.3.10",
    "ethers": "^6.8.0",
    "hardhat": "^2.26.3",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.1",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.0",
    "typescript": "^5.9.3"
  }
}
